
<!-- Portada de la pagina -->
<%= render 'partials/coverPage' %>

<div class="container margin-top">
  <h3>Artículos de colectión disponibles</h3>


  <div class="card-column">
    <% @articules.each do | article |%>

      <div class="card" style="max-width: 18rem;">
          <img class="card-img-top" src="<%= article.thumdnail %>" alt="Card image cap" style="height: 17rem;">
          <div class="card-body">
            <h5 class="card-title">
              <a href="/articules/<%= article.id %>" class="card-link"> <%= article.title %></a>
            </h5>
          </div>
        <div class="card-footer">
          <span class="badge badge-pill badge-success"><%= article.price %>€</span>
        </div>
      </div>
    <% end %>
  </div>





</div>


